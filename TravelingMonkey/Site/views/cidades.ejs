<%- include ('partials/header.ejs') %>
    <main class="cidadesBody">
        <h1>BUSCA CIDADES</h1>

        <table  class="cidadesTable">
            <thead>
                <tr>
                    <!--<th></th>-->
                    <th>NOME: 
                        <span class="material-symbols-outlined">swap_vert</span>
                    </th>
                    <th>PONTO TURISTICO 
                        <span class="material-symbols-outlined">swap_vert</span>
                    </th>
                    <th>SITUAÇÃO 
                        <span class="material-symbols-outlined">swap_vert</span>
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% cidades.forEach(function(cidade){ %>
                    <tr>
                        <!--<td><img src="<%= cidade.profilePic %>" alt=""></td>-->
                        <td><%= cidade.nome %></td>
                        <td><%= cidade.pontoTuristico %></td>
                        <td><%= cidade.operacao %></td>
                        <td>
                            <div class="btnsActionscidades">
                                <a class="editarcidade" href="/cidades/edit/<%= cidade.id %>">EDITAR</a>
                            </div>
                        </td>
                        <td>
                            <div class="btnsActionscidades">
                                <a class="deletarcidade" href="/cidades/delete/<%= cidade.id %>" onclick="return confirm('Tem certeza que deseja excluir o cadastro do cidade: <%= cidade.nome %>?')">EXCLUIR</a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4"></th>
                </tr>
            </tfoot>
        </table>
    </main>

<%- include ('partials/footer.ejs') %>